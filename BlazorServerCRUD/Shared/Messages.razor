
@if (ResponseMessageIsVisble)
{
    if (Result)
    {
    <div id="ResponseMessage" class="col-11 alert alert-danger">
        <div class="row">
            <div class="col-11" style="text-align:left">
                <span>@ChildContent Record has been saved successfully</span>
            </div>
            <div class="col-1" style="text-align:right">
                <a style="text-underline-position:below;cursor:pointer" @onclick="(()=>CloseMessage() )">X</a>
            </div>
        </div>
    </div>
        }
        else
        {
        <div id="ResponseMessage" class="col-11 alert alert-danger">
            <div class="row">
                <div class="col-11" style="text-align:left">
                    <span>Something went wrong...</span>
                </div>
                <div class="col-1" style="text-align:right">
                    <a style="text-underline-position:below;cursor:pointer" @onclick="(()=>CloseMessage() )">X</a>
                </div>
            </div>

        </div>

        }



        }

        @code {

    [Parameter]
    public bool ResponseMessageIsVisble { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public bool Result { get; set; }


    protected void CloseMessage()
    {
        ResponseMessageIsVisble = false;
        
    }
        }
